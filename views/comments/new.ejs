<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= hotel.name %> </h1>
        <div style="width: 30%; margin: 2rem auto;">
            <form action="/hotels/<%= hotel._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels">Go Back !</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>