<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Hotel Simplified</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
                <!-- MAP (to be added later) -->
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= hotel.image %>" alt="<%= hotel.name %> Image">
                    <div class="caption">
                        <h4 class="pull-right">â‚¹ 1000/night </h4>
                        <h1><a><%= hotel.name %></a></h1>
                        <p><%= hotel.description %></p>
                        <p>
                            <em>Submitted By <%= hotel.author.username %></em>
                        </p>
                        <a href="/hotels/<%=hotel._id%>/edit" class="btn btn-warning">Edit</a>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/hotels/<%= hotel._id %>/comments/new">
                            Add New Comment
                        </a>
                    </div>
                    <hr>
                    <% hotel.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>
                        <p>
                        </p>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
<%- include("../partials/footer") %>