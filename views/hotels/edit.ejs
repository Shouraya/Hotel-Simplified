<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= hotel.name %></h1>
        <div style="width: 30%; margin: 2rem auto;">
            <form action="/hotels/<<%= hotel._id %>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= hotel.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= hotel.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= hotel.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels">Go Back !</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>